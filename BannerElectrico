prob = rand(100)
case prob
when (0...5) # Tier 1 con un 50%
  itemReward(:BELUEBERRY, 1)
when (5...10) # Tier 1 con un 50%
  itemReward(:THUNDERSTONE, 1)
when (10...15) # Tier 1 con un 50%
  itemReward(:ELECTRICMEMORY, 1)
when (15...20) # Tier 1 con un 50%
 itemReward(:MAGNET, 1)
when (20...25) # Tier 2 con un 50%
 itemReward(:TM24, 2)
when (25...30) # Tier 2 con un 50%
 itemReward(:TM72, 2)
when (30...35) # Tier 2 con un 50%
 itemReward(:TM93, 2)
when (35...40) # Tier 2 con un 50%
  itemReward(:TM121, 2)
when (40...45) # Tier 2 con un 50%
  itemReward(:TM167, 2)
when (45...50) # Tier 2 con un 50%
  itemReward(:TM250, 2)
when (50...90) #Tier 3 con un 40%
    pokes = [:MAGNEMITE, :VOLTORB, :PICHU, :ELECTRIKE, :EMOLGA]
    result = pokes[rand(pokes.length)]
    pokeReward(PokeBattle_Pokemon.new(result,5,$Trainer),3)
when (90...98) #Tier 4 con un 8%
    pokes = [:SANDYSHOCKS, :DRACOZOLT, :IRONHANDS]
    result = pokes[rand(pokes.length)]
    pokeReward(PokeBattle_Pokemon.new(result,5,$Trainer),4)
when (98...100) #Tier 5 con un 2%
    pokes = [:RAIKOU]
    result = pokes[rand(pokes.length)]
    pokeReward(PokeBattle_Pokemon.new(result,5,$Trainer),5)
end

